<page-meta root-font-size="system"/>
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
  <view wx:if="{{isAuthorized}}">
    <view class="page__hd">
      <view class="weui-panel__hd">应用列表</view>
    </view>
    <view class="page_bd">
      <view class="weui-grids">
        <block wx:for="{{grids}}" wx:key="this">
          <navigator class="weui-grid" data-index="{{index}}" bindtap="onNavigatorTap" aria-role="button" url="javascript:">
            <view class="weui-grid__icon">
              <image class="weui-grid__icon" src="../../resources/icons/cube.svg"></image>
            </view>
            <view class="weui-grid__label">{{item.name}}</view>
          </navigator>
        </block>
        
        <!-- Add App Grid Item -->
        <view class="weui-grid" bindtap="onAddApp" aria-role="button">
          <view class="weui-grid__icon">
            <image class="weui-grid__icon" src="../../resources/icons/setting.svg"></image>
          </view>
          <view class="weui-grid__label">管理应用</view>
        </view>
      </view>
    </view>
  </view>
  <view wx:else class="unauthorized-message">
    <text>请先切换至个人页登录</text>
  </view>
</view>
