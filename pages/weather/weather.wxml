<!--pages/weather/weather.wxml-->
<view class="weui-panel">
    <view wx:if='{{isAuthorized}}' class="weui-panel__hd">您关心的城市:</view>
    <view wx:else class="weui-panel__hd">当前热门城市:</view>
    <navigator url="" wx:for='{{weatherData}}' wx:key="this" class="weui-media-box weui-media-box_appmsg"
        hover-class="weui-cell_active">
        <view class="weui-media-box__hd">
            <image class="weui-media-box__thumb" src="../../resources/icons/weather/sunny.svg" />
        </view>
        <view class="weui-media-box__bd">
            <view class="weui-media-box__title">{{item.city}}</view>
            <view class="weui-media-box__desc">概况:{{item.info}}</view>
            <view class="weui-media-box__desc">温度:{{item.temperature}}</view>
            <view class="weui-media-box__desc">风况:{{item.direct}} {{item.power}}</view>
            <view class="weui-media-box__desc">相对湿度:{{item.humidity}}</view>
        </view>
    </navigator>
</view>