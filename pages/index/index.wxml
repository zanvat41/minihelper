<!--index.wxml-->
<view wx:if="{{isAuthorized}}">
  <!-- 天气 -->
  <view class="weui-panel">
    <view class="weui-panel__hd">您关心的城市:</view>
    <navigator url="" wx:for="{{weatherData}}" wx:key="this" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" url="javascript:">
      <view class="weui-media-box__hd">
        <!-- 天气图表示例 -->
        <image class="weui-media-box__thumb" src="../../resources/icons/weather/sunny.svg" />
      </view>
      <view class="weui-media-box__bd">
        <view class="weui-media-box__title">{{item.city_info.province}}-{{item.city_info.city}}-{{item.city_info.area}}</view>
        <view class="weui-media-box__desc">
          <text>温度: {{item.temperature}}度 风况: {{item.direct}} {{item.power}}</text>
        </view>
        <view class="weui-media-box__desc">
          <text>对湿度: {{item.humidity}}</text>
        </view>
      </view>
    </navigator>
  </view>  <!-- 股票 -->
  <view class="weui-panel">
    <view class="weui-panel__hd">您关心的股票:</view>
    <view class="weui-media-box weui-media-box_text {{item.is_rising ? 'stock-rising' : 'stock-falling'}}" wx:for="{{stockData}}" wx:key="this">
      <view class="weui-media-box__title">{{item.name}} ({{item.increase}})</view>
      <view class="stock-current-price">当前: {{item.now_price}}</view>
      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta">最高: {{item.today_max}}</view>
        <view class="weui-media-box__info__meta">最低: {{item.today_min}}</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">开盘: {{item.start_price}}</view>
      </view>
    </view>
  </view>

  <!-- 星座 -->
  <view class="weui-panel">
    <view class="weui-panel__hd">您关心的星座:</view>
    <view class="weui-media-box weui-media-box_text constellation-text" wx:for="{{constellationData}}" wx:key="this">
      <view class="weui-media-box__title">{{item.name}}</view>
      <view class="weui-media-box__desc">{{item.text}}</view>
    </view>
  </view>
</view>
<view wx:else class="unauthorized-message">
  <text>请先切换至个人页登录</text>
</view>