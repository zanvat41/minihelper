/**index.wxss**/

/* Page-specific customizations */
page {
  padding-top: 16px;
}

/* Custom panel spacing */
.weui-panel {
  margin: 16px;
  margin-top: 0;
  margin-bottom: 16px;
}

/* Weather thumbnail styling */
.weui-media-box__thumb {
  border-radius: 8px;
}

/* Stock price styling */
.stock-current-price {
  font-size: 15px;
  font-weight: 500;
  color: var(--weui-FG-0, rgba(0, 0, 0, 0.9));
  margin: 8px 0;
}

/* Stock price indicators - use data attributes instead */
.stock-rising .weui-media-box__title {
  color: var(--weui-RED, #fa5151);
}

.stock-falling .weui-media-box__title {
  color: var(--weui-GREEN, #07c160);
}

/* Constellation text styling - only apply to constellation section */
.constellation-text .weui-media-box__desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Unauthorized state styling */
.unauthorized-message {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50vh;
  color: var(--weui-FG-1, rgba(0, 0, 0, 0.55));
  font-size: 16px;
}

/* Responsive design */
@media screen and (max-width: 320px) {
  .weui-panel {
    margin: 8px;
  }
  
  .weui-media-box__info {
    flex-direction: column;
    gap: 8px;
  }
  
  .weui-media-box__info__meta_extra {
    padding-left: 0;
    border-left: none;
    padding-top: 8px;
    border-top: 1px solid var(--weui-FG-3, rgba(0, 0, 0, 0.1));
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  page {
    background-color: #1a1a1a;
  }
  
  .weui-panel {
    background-color: #2a2a2a;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .weui-media-box {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .weui-media-box:active {
    background-color: rgba(255, 255, 255, 0.1);
  }
}

/* Animation and transitions */
.weui-media-box,
.weui-panel {
  transition: all 0.2s ease;
}

/* Empty state styling */
.weui-panel:empty::after {
  content: "暂无数据";
  display: block;
  text-align: center;
  color: var(--weui-FG-2, rgba(0, 0, 0, 0.3));
  padding: 32px 16px;
  font-size: 14px;
}
